{{>head-home}}
<div class="row mb-4 post">
  <div class="col-md-12">
    <h2 class="header">
      <span class="title">{{title}}</span>
      <span class="user"><img class="avatar" src="../../images/{{user.img_url}}.png" /><em>Posted by {{user.username}} on {{format_date date_created}}</em></span>
    </h2>
</div>
  <div class="col-md-12">
    <p>
      {{content}}
    </p>
  </div>
</div>
<!-- Loop over each comment in the comments array -->
<div class="row mb-4 com-list">
{{#each allComments as |comment| }}
{{> comment-details}}
{{/each}}
</div>
<div class="row mt-4 com-form block">
 <div class="col-md-12">
    <form class="form new-comment-form">
     <input type="hidden" id="com-user-id" name="com-user-id" value="{{com_user_id}}" />    
     <input type="hidden" id="post-id" name="post-id" value="{{id}}" />    
      <div class="form-group">
        <label for="com-content">Comment:</label>
        <textarea class="form-input" id="com-content" name="com-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{com_user_id}}">Submit</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/new-comment.js"></script>