{{>head-home}}
<!-- Loop over each post in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-12">
    <h2 class="header">
      <a href="/post/{{post.id}}">{{post.title}}</a>  <span class="user"><img class="avatar" src="images/{{post.user.img_url}}.png" /><em>Posted by {{post.user.username}} on {{format_date post.date_created}}</em></span> 
    </h2>
    
</div>
  <div class="col-md-12">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
